{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["@netlify/edge-functions"]
  },
  "include": [
    "netlify/edge-functions/**/*",
    "src/**/*",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "terraform"
  ]
}