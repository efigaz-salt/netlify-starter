# Security Edge Function Configuration
# Copy this file to .env and adjust values as needed

# Comma-separated list of allowed CORS origins
# Use * for development (not recommended for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8888

# Rate limiting configuration
# Window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW=60000
# Maximum requests per window per IP (default: 100)
RATE_LIMIT_MAX=100

# Backend API tokens (for MuleSoft proxy)
# These are injected by the security edge function
MULESOFT_API_KEY=your-mulesoft-api-key-here

# API Gateway URL (from Terraform output)
# Format: https://{api-id}.execute-api.{region}.amazonaws.com/{stage}
API_GATEWAY_URL=

# API Router Configuration
API_TIMEOUT=30000
API_RETRIES=2

# Environment
NODE_ENV=development

# ============================================================================
# Salt Security Collector Configuration
# ============================================================================

# Salt Security Hybrid URL (required)
# This is the endpoint where traffic data is sent
SALT_HYBRID_URL=https://your-hybrid-url.saltsecurity.io

# Salt Security Hybrid Token (required)
# Authentication token for the Salt Security API
SALT_HYBRID_TOKEN=your-hybrid-token-here

# Salt Security Debug Mode (optional)
# Set to 'true' to enable debug logging
SALT_DEBUG=false

# Salt Security CA Certificate (optional)
# Custom CA certificate for HTTPS connections to Salt Security hybrid
# Format: Single-line PEM with literal \n for newlines
# Example: SALT_HYBRID_CA=-----BEGIN CERTIFICATE-----\nMIIFhDCCA...(certificate content)...\n-----END CERTIFICATE-----
SALT_HYBRID_CA=
